{% extends 'base.html.twig' %}

{% block title %}Showcase{% endblock %}

{% block body %}
    <h1>Showcase</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ showcase.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ showcase.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ showcase.description }}</td>
            </tr>
            <tr>
                <th>IsPublic</th>
                <td>{{ showcase.isPublic ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_showcase_index') }}">back to list</a>

    <a href="{{ path('app_showcase_edit', {'id': showcase.id}) }}">edit</a>

    {{ include('showcase/_delete_form.html.twig') }}
{% endblock %}
