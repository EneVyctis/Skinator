{% extends 'base.html.twig' %}

{% block title %}Showcase{% endblock %}

{% block body %}
    <h1>Showcase</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ showcase.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ showcase.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ showcase.description }}</td>
            </tr>
            <tr>
                <th>IsPublic</th>
                <td>{{ showcase.isPublic ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Skins</th>
<ul><td>
   {% for skin in showcase.skins %}
<li>
     <a href="{{ path('app_showcase_skin_show', {'showcase_id': showcase.id, 'skin_id' : skin.id}) }}">{{ skin }}</a>
</li>
   {% endfor %}
</ul></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_member_index') }}">Member list</a></br>
    <a href="{{ path('app_showcase_index') }}">Showcase list</a></br>
    
    <a href="{{ path('app_showcase_edit', {'id': showcase.id}) }}">edit</a>

    {{ include('showcase/_delete_form.html.twig') }}
{% endblock %}
